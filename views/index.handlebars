<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<img src="/assets/burger.png" alt="burger"/>

      <h1>Eat-Da-Burger!</h1>
    </div>
  </div>
		<div class="col-md-6 text-center">
			<div class="row">
        <div class="col-md-9 text-center">

           <div class="col-md-3 text-center">
					  <form class="devour-form">
            <ul>
            {{#each burgers}}
            {{#unless devoured}}
          
            <li>
            {{burger_name}}
            <button class="change-burger">Devour it!</button>
            </li>
            </form>
          </div>
        </div>  
			</div>
    </div>
      {{/unless}}
      {{/each}}
      </ul>
      
      <div class="col-md-6 text-center">
        <h2>Burgers that are devoured:</h2>
        <ul>
          {{#each burgers}}
          {{#if devour}}
          {{/if}}
          {{/each}}
        </ul>
      </div>

  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center enter_section">
    <h2>Add a Burger</h2>
  <form id="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name" class="burgername">

      </div>

    <p>Enter a burger you want to eat and click the "Submit" button!</p>
    <button type="submit">Submit</button>

    </form>
    </div>
  </div>
</div>  