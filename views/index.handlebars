
<img class="displayed" src="/assets/burger.png" alt="burger"/>
  <h1>Eat-Da-Burger!</h1>

<div class="container">
  <div class="row">
    <div class="col-8 col-sm-6">

      <form class="devour-form">
      <h2>Burgers to devour:</h2>
          <ol>
          {{#each burgers}}
          {{#unless devoured}}
        
          <li>
          {{burger_name}}
          <button data-id="{{id}}" class="devoured">Devour it!</button>
          </li>
      </form>
          {{/unless}}
          {{/each}}
          </ol>
    </div>

    <div class="col-8 col-sm-6">
      <h2>Burgers devoured:</h2>
      <ol>
        {{#each burgers}}
        {{#if devoured}}
         <li>
          {{burger_name}}
          </li>
        {{/if}}
        {{/each}}
      </ol>
    </div>
  </div> 
        

  <div class="row">
      <div class="col-md-12 text-center enter_section">
    <h2>Add a Burger</h2>
  <form id="create-form">

    <div class="form-group">
      <label for="burgerName">Burger Name:</label>
      <input type="text" id="burgerName" burger_name="name">

    </div>

    <p>Enter a burger you want to eat and click the "Submit" button!</p>
    <button id="create-btn" type="submit">Submit</button>

  </form>
